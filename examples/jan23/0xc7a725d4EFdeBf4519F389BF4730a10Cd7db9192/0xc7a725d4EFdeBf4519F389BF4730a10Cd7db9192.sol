contract Presale is  Ownable{
    using EnumerableSet for EnumerableSet.AddressSet;
    uint public maxContribution;
    uint public minContribution;

    address public recipient; 
    IDEXRouter02 router=IDEXRouter02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
    //mainnet
    address public USDC=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;
    uint8 decimalCorrection=12;//token has 12 decimals more than USDC
    //testnet
    //address public USDC=0x07865c6E87B9F70255377e024ace6630C1Eaa37F;
    //uint8 decimalCorrection=12;//token has 12 decimals more than USDC


    address public Token;

    uint public PresaleStartTimestamp=type(uint).max;
    uint public PresaleEndTimestamp=type(uint).max;

    EnumerableSet.AddressSet private _allContributors;
    function allContributorsLength() external view returns(uint){
        return _allContributors.length();
    }
    function allContributors(uint at) external view returns(address){
        return _allContributors.at(at);
    }
    function presaleOpen() public view returns (bool){
        uint timestamp=block.timestamp;
        return(timestamp>=PresaleStartTimestamp)&&(timestamp<=PresaleEndTimestamp);
    }
    function claimOpen() public view returns (bool){
        return(block.timestamp>PresaleEndTimestamp);
    }

    mapping(address=>uint) public tokensPurchased;
    uint public totalTokensSold;
    uint public totalUSDRaised;
    uint public currentStage;

    Stage[] public stages;
    function stagesLength() external view returns (uint){
        return stages.length;
    } 



    constructor(){
        recipient=msg.sender;
    }
    struct Stage{
        uint soldTokens;
        uint maxTokens;
        uint tokenPerUSDC;//in 1/1,000,000
    }
    function startPresale() external{
        setStart(block.timestamp);
    }
    function endPresale() external{
        setEnd(block.timestamp);
    }
    function setStart(uint presaleStart) public onlyOwner{
        PresaleStartTimestamp=presaleStart;
    }
    function setEnd(uint presaleEnd) public onlyOwner{
        PresaleEndTimestamp=presaleEnd;
    }
    function changeRecipient(address newRecipient) external onlyOwner{
        recipient=newRecipient;
    }
    function changeToken(address token) external onlyOwner{
        Token=token;
    }
    function addStage(uint maxTokens, uint tokenPerUSDC) external onlyOwner{
        stages.push(Stage(0,maxTokens,tokenPerUSDC));
    }
    function setMinMaxTokens(uint min, uint max) external onlyOwner{
        minContribution=min;
        maxContribution=max;
    }

    function changeStage(uint id, uint maxTokens, uint tokenPerUSDC) external onlyOwner{
        Stage storage stage=stages[id];
        stage.maxTokens=maxTokens;
        stage.tokenPerUSDC=tokenPerUSDC;
    }


    function contributeETH(uint minAmount, address referer) external payable{

        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = USDC;
        uint balanceBefore=IERC20(USDC).balanceOf(recipient);
        router.swapExactETHForTokens{value:msg.value}(minAmount, path, recipient, block.timestamp);
        uint received=IERC20(USDC).balanceOf(recipient)-balanceBefore;
        _contribute(received);
    }
    function contributeUSDC(uint amount,address referer) external {
        IERC20(USDC).transferFrom(msg.sender,address(recipient),amount);
        _contribute(amount);
    }
    event OnContribute(address contributor, uint amountContributed, uint amountReceived);
    function _contribute(uint amount) private{
        require(presaleOpen(),"not yet open");
        address msgSender=msg.sender;
        _allContributors.add(msgSender);
        require(currentStage<stages.length,"presale over");

        Stage storage stage=stages[currentStage];
        uint amountReceived=amount*10**(decimalCorrection)*stage.tokenPerUSDC/1_000_000;

        uint tokensLeftToSell=stage.maxTokens-stage.soldTokens;
        uint finalContribution;
        if(amountReceived>=tokensLeftToSell)
        {        
            finalContribution=tokensPurchased[msgSender]+tokensLeftToSell;
            require(finalContribution<=maxContribution,"over maxContribution");
            require(finalContribution>=minContribution,"less than minContribution");
            tokensPurchased[msgSender]=finalContribution;
            stage.soldTokens+=tokensLeftToSell;
            totalTokensSold+=tokensLeftToSell;
            uint nextStageContribution=(amountReceived-tokensLeftToSell)*1_000_000/(stage.tokenPerUSDC*10**decimalCorrection);
            uint contributionThisStage=amount-nextStageContribution;
            totalUSDRaised+=contributionThisStage;
            currentStage++;
            emit OnContribute(msgSender,contributionThisStage,tokensLeftToSell);
            if(nextStageContribution>0)
                _contribute(nextStageContribution);
            return;
        }
        totalUSDRaised+=amount;
        finalContribution=tokensPurchased[msgSender]+amountReceived;
        require(finalContribution<=maxContribution,"over maxContribution");
        require(finalContribution>=minContribution,"less than minContribution");
        tokensPurchased[msgSender]=finalContribution;
        stage.soldTokens+=amountReceived;
        totalTokensSold+=amountReceived;
            emit OnContribute(msgSender,amount,amountReceived);
    }
    event OnClaim(address recipient, uint amountReceived);
    function claim() public{ 
        require(claimOpen(),"Presale not yet concluded");
        address msgSender=msg.sender;
        require(block.timestamp>PresaleEndTimestamp);
        uint contributed=tokensPurchased[msgSender];
        tokensPurchased[msgSender]=0;
        IERC20(Token).transfer(msgSender,contributed);
        emit OnClaim(msgSender,contributed);
    }



}