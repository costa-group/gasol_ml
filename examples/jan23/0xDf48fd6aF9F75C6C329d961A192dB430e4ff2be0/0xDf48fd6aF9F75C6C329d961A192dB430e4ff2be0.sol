contract TabascoInu is ERC20 {
    uint256 supply;
    uint256 maxWallet;
    uint256 delayBlockCount = 0; // 0 by default
    bool tradingStatus = false;
    address owner;
    IUniswapV2Router02 public uniswapV2Router;
    mapping(address => uint256) private lastTransfer;
    address public uniswapV2Pair;
    modifier onlyOwner() {
        require (msg.sender == owner);
        _;
    }

    constructor() ERC20("TabascoInu", "Tabasco") {
        supply = 1 * 1e6 * 1e18; // 1 000 000 tokens, 18 decimal
        maxWallet = supply * 20 / 1000; // 2%
        owner = msg.sender;
        _mint(msg.sender, supply);
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);//
        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _uniswapV2Router.WETH());
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override { 
        if (from != owner && to != owner) { 
            require(tradingStatus, "Trading not open yet");
            require(lastTransfer[tx.origin] < block.number);
            if(to != uniswapV2Pair) {
                require(balanceOf(to) + amount <= maxWallet, "TOKEN: Balance exceeds wallet size!");
            }
            
        }
        lastTransfer[tx.origin] = block.number + delayBlockCount;
        super._transfer(from, to, amount);
    }

    function setDelayBlockCount(uint256 _num) public onlyOwner() {
        delayBlockCount = _num;
    }


    function changeTradingStatus(bool _state) public onlyOwner() {
        tradingStatus = _state;
    }

    function returnTradingStatus() public view returns(bool) {
        return tradingStatus;
    }

    function changeMaxWallet(uint256 _amount) public onlyOwner() {
        maxWallet = _amount;
    }

    function returnMaxWallet() public view returns(uint) {
        return maxWallet;
    }




}