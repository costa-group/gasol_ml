//pragma solidity ^0.6.12;

contract Sale {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    IERC20 public constant TOKEN = IERC20(0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48);  

    struct User {
        uint256 total_deposits;
    }

    address public manager; // lc deployer address
    address public lcAddr = 0xc0702Ae0374F83fc3bA71CE2B30A323b09EC19da; // lc treasury address
    address public partner; 
    address public protocolAddr; // partner treasury address

    mapping(address => User) public users;

    uint256 public startTime;
    uint256 public endTime;
    uint256 public total_deposited;
    uint256 public minDepositAmount = 50000000; // $50 USDC 6 decimals
    uint256 public totalraiseCapPublic = 2000000000000; // $2m USDC 6 decimals

    bool public enabled = true;

    constructor(uint256 _startTime, address _protocolAddr) public {
        startTime = _startTime;
        endTime = startTime + 2 weeks;
        partner = _protocolAddr;
        manager = msg.sender;
        protocolAddr = _protocolAddr;
    }
 
     receive() external payable {
        revert("Do not send tokens other than USDC.");
    }

    modifier onlyManager() {
        require(msg.sender == manager, "Caller is not the manager!");
        _;
    }

    modifier onlyParty() {
        require(msg.sender == manager || msg.sender == partner, "Caller is not Admin!");
        _;
    }

    function buyToken(uint256 _amount) external {
        address _sender = msg.sender;

        require(enabled && block.timestamp > startTime && block.timestamp < endTime, "Sale Not Open");    
        require(_amount >= minDepositAmount, "Should deposit more than minimum deposit amount per one time");
        require(total_deposited + _amount <= totalraiseCapPublic, "Over total raise");
        require(TOKEN.balanceOf(_sender) >= _amount, "Insufficient balance");
        require(TOKEN.allowance(_sender, address(this)) >= _amount, "Insufficient allowance");

        TOKEN.safeTransferFrom(_sender, address(this), _amount);
        users[_sender].total_deposits = users[_sender].total_deposits.add(_amount);
        total_deposited = total_deposited.add(_amount);
    }


    function setStart(uint256 _time) external onlyManager {
        startTime = _time;
    }

    function setEnd(uint256 _time) external onlyManager {
        endTime = _time;
    }

    function setEnabled(bool _enabled) external onlyParty {
        enabled = _enabled;
    }

    function setMinDepositAmount(uint256 _amount) external onlyManager {
        minDepositAmount = _amount;
    }

    function setTotalRaise(uint256 _amount) external onlyManager {
        totalraiseCapPublic = _amount;
    }

    function setPartnerWithdrawAddress(address payable _protocolAddr) external onlyParty {
        require(_protocolAddr != address(0), "Zero address");
        protocolAddr = _protocolAddr;
    }

    function setLCWithdrawAddress(address payable _lcAddr) external onlyManager {
        require(_lcAddr != address(0), "Zero address");
        lcAddr = _lcAddr;
    }

    function withdraw() external onlyParty {
        uint256 totalAmount = TOKEN.balanceOf(address(this));
        uint256 amount1 = totalAmount.mul(8).div(10);
        uint256 amount2 = totalAmount.mul(2).div(10);

        TOKEN.safeTransfer(lcAddr, amount1);
        TOKEN.safeTransfer(protocolAddr, amount2);
    }

    function changeManager(address _newManager) external onlyManager {
        require(_newManager != address(0), "Zero address");
        manager = _newManager;
    }

    function changePartner(address _newPartner) external onlyParty {
        require(_newPartner != address(0), "Zero address");
        partner = _newPartner;
    }

    function emergencyWithdraw(IERC20 _token, uint256 _amnt) external onlyManager {
        _token.safeTransfer(lcAddr, _amnt);
    }

}