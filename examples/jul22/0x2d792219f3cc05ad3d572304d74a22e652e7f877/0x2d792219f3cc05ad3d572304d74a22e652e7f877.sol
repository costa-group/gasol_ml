  uint256 public override totalSupply = 120300000000000;
  uint8 public  decimals = 6;
  string public  symbol = "ZNX";
  string public  name = "ZeNeX Coin";
  address public getOwner = address(0x5fe4f5824e06AED841330F077276c130F8073F04); 

  constructor() {
    balanceOf[0x5fe4f5824e06AED841330F077276c130F8073F04] = totalSupply;
    emit Transfer(address(0), 0x5fe4f5824e06AED841330F077276c130F8073F04, totalSupply);
  }


  /**
