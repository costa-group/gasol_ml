contract BURNER is Initializable, OwnableUpgradeable {
    IERC20 public RootX;
    IERC1155Upgradeable public NOB;
    uint256 public RBA; // RootX Burning Amount
    uint256 public NOB_Available; // NOB Earn Amount
    uint256 public NOB_ID; // NOB ID

    uint public discountRate;
    uint public startAt;
    uint public expiresAt;
    uint public DURATION;
    uint public roundDuration;

    function initialize() public initializer {
        RootX = IERC20(0xd718Ad25285d65eF4D79262a6CD3AEA6A8e01023);
        NOB = IERC1155Upgradeable(0xC5F9AB5d6238Fb9cA580d902c3122436032f0064);
        RBA = 200000;
        discountRate = 1000;
        DURATION = 7 days;
        startAt = block.timestamp;
        expiresAt = block.timestamp + DURATION;
        NOB_Available = 20;
        NOB_ID = 4;
        roundDuration = 60;
        __Ownable_init();
    }

    /**
     * get discount price
     */
    function getPrice() public view returns (uint) {
        uint timeElapsed = block.timestamp - startAt;
        uint rounds = timeElapsed / (roundDuration * 1 minutes);
        uint discount = discountRate * rounds;
        return RBA - discount;
    }

    /**
     * get balance of NOB for an address
     */
    function NOB_Balance(address _address, uint id) public view returns (uint) {
        return IERC1155Upgradeable(NOB).balanceOf(_address, id);
    }

    /**
     * get balance of ERC20 for an address
     */
    function Token_Balance(address _address) public view returns (uint) {
        return IERC20(RootX).balanceOf(_address);
    }

    /**
     * Burn RootX and Earn NOB
     */
    function BurnAndEarn(uint256 _amount) public {
        uint256 userBalance = IERC20(RootX).balanceOf(msg.sender);
        uint price = (_amount * (getPrice() * 10 ** IERC20(RootX).decimals()));

        require(
            block.timestamp < expiresAt,
            "The event/activity/sale has concluded"
        );
        require(userBalance >= (price), "You don't have enough tokens");
        require(
            NOB_Balance(address(this), NOB_ID) >= NOB_Available,
            "NOB Pot is empty"
        );

        IERC20(RootX).transferFrom(msg.sender, address(this), price);
        IERC1155Upgradeable(NOB).safeTransferFrom(
            address(this),
            msg.sender,
            NOB_ID,
            _amount,
            "0x"
        );
        NOB_Available -= _amount;
    }

    /**
     * Update ERC20 Address
     */
    function updateERC20ContractAddress(address _address) public onlyOwner {
        RootX = IERC20(_address);
    }

    /**
     * Update ERC1155 Address
     */
    function updateERC1155ContractAddress(address _address) public onlyOwner {
        NOB = IERC1155Upgradeable(_address);
    }

    /**
     * Update NOB_Available
     */
    function update_NOB_Available(uint value) public onlyOwner {
        NOB_Available = value;
    }

    /**
     * Update NOB_ID
     */
    function update_NOB_ID(uint value) public onlyOwner {
        NOB_ID = value;
    }

    /**
     * Update DURATION
     */
    function update_DURATION(uint _Days) public onlyOwner {
        require(_Days > 0, "invalid days");
        DURATION = _Days * 1 days;
    }

    /**
     * Update discountRate
     */
    function update_discountRate(uint value) public onlyOwner {
        discountRate = value;
    }

    /**
     * Update starting time in munutes
     */
    function update_startAt(uint value) public onlyOwner {
        require(value > 0, "invalid value");
        startAt += value * 1 minutes;
    }

    /**
     * Set current time as a starting time
     */
    function set_startAt_fromNow() public onlyOwner {
        startAt = block.timestamp;
    }

    /**
     * increase expiry time in munutes
     */
    function increase_expiry(uint value) public onlyOwner {
        require(value > 0, "invalid value");
        expiresAt += value * 1 minutes;
    }

    /**
     * decrease expiry time in munutes
     */
    function decrease_expiry(uint value) public onlyOwner {
        require(value > 0, "invalid value");
        expiresAt -= value * 1 minutes;
    }

    /**
     * Update Round Duration in munutes
     */
    function updateRoundDuration(uint _Minutes) public onlyOwner {
        require(_Minutes > 0, "invalid minutes");
        roundDuration = _Minutes * 1 minutes;
    }

    /**
     * Withdraw ERC20 Token to Owner Wallet
     */
    function Withdraw20(IERC20 _address) public payable onlyOwner {
        __withdraw20(_address);
    }

    function __withdraw20(IERC20 _address) internal {
        IERC20(_address).transfer(
            owner(),
            IERC20(_address).balanceOf(address(this))
        );
    }

    /**
     * Withdraw ERC1155 NFTs to Owner Wallet
     */
    function Withdraw1155(
        IERC1155Upgradeable _address,
        uint id,
        uint _amount
    ) public payable onlyOwner {
        __withdraw1155(_address, id, _amount);
    }

    function __withdraw1155(
        IERC1155Upgradeable _address,
        uint id,
        uint _amount
    ) internal {
        IERC1155Upgradeable(_address).safeTransferFrom(
            address(this),
            msg.sender,
            id,
            _amount,
            "0x"
        );
    }

    /**
     * These functions are added to be able to receive erc1155 NFTs to this contract
     */
    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual returns (bytes4) {
        return this.onERC721Received.selector;
    }
}