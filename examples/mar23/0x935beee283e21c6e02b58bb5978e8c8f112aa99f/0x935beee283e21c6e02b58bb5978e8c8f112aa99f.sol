library Signature {
    function recoverAddresses(bytes32 _hash, bytes memory _signatures) internal pure returns (address[] memory addresses) {
        uint8 v;
        bytes32 r;
        bytes32 s;
        uint count = _countSignatures(_signatures);
        addresses = new address[](count);
        for (uint i = 0; i < count; i++) {
            (v, r, s) = _parseSignature(_signatures, i);
            addresses[i] = ecrecover(_hash, v, r, s);
        }
    }
    
    function _parseSignature(bytes memory _signatures, uint _pos) internal pure returns (uint8 v, bytes32 r, bytes32 s) {
        uint offset = _pos * 65;
        assembly {
            r := mload(add(_signatures, add(32, offset)))
            s := mload(add(_signatures, add(64, offset)))
            v := and(mload(add(_signatures, add(65, offset))), 0xff)
        }

        if (v < 27) v += 27;

        require(v == 27 || v == 28);
    }
    
    function _countSignatures(bytes memory _signatures) internal pure returns (uint) {
        return _signatures.length % 65 == 0 ? _signatures.length / 65 : 0;
    }
}

contract ActivityAchieve is Ownable {
    using SafeMath for uint256;

    struct UserInfo {
        uint256 count;
        bool isClaimed;
    }

    uint256 public _startTimestamp;
    uint256 public _endTimestamp;
    uint256 public _totalRewardAmount;
    address public _rewardToken;
    address public _treasury;
    address public _signer;
    uint128 public _limitCount;
    uint128 public _successAmount;

    mapping(address => UserInfo) _userInfoes;

    event PunchIn(address indexed user, uint256 count);
    event Claim(address indexed user, uint256 amount, address token);

    constructor(
        uint256 startTimestamp,
        uint256 endTimestamp,
        uint128 limitCount,
        uint256 totalRewardAmount,
        address rewardToken,
        address treasury,
        address signer
    ) {
        require(startTimestamp < endTimestamp, "Invalid parameter startTimestamp or endTimestamp");
        require(limitCount > 0, "Invalid parameter limitCount");
        require(rewardToken != address(0), "Invalid parameter rewardToken");
        require(signer != address(0), "Invalid parameter signer");

        _startTimestamp = startTimestamp;
        _endTimestamp = endTimestamp;
        _limitCount = limitCount;
        _totalRewardAmount = totalRewardAmount;
        _rewardToken = rewardToken;
        _treasury = treasury;
        _signer = signer;
    }

    function setRewardToken(address rewardToken) public onlyOwner {
        require(rewardToken != _rewardToken , "No changed");
        _rewardToken = rewardToken;
    }

    function setTotalRewardAmount(uint256 totalRewardAmount) public onlyOwner {
        require(totalRewardAmount != _totalRewardAmount, "No changed");
        _totalRewardAmount = totalRewardAmount;
    }

    function setLimitCount(uint128 limitCount) public onlyOwner {
        require(limitCount != _limitCount, "No changed");
        _limitCount = limitCount;
    }

    function setTreasury(address treasury) public onlyOwner {
        require(treasury != _treasury , "No changed");
        _treasury = treasury;
    }

    function setSigner(address signer) public onlyOwner {
        require(signer != _signer , "No changed");
        _signer = signer;
    }

    function punchIn(uint256 count, bytes memory signature) external {
        require(verify(msg.sender, count, signature), "Invalid signature");
        require(_userInfoes[msg.sender].count == count, 'Invalid paratemer count');
        require(_startTimestamp <= block.timestamp && block.timestamp < _endTimestamp, "Wrong time");

        if (_userInfoes[msg.sender].count == 0) {
            _userInfoes[msg.sender] = UserInfo(1, false);
        } else {
            _userInfoes[msg.sender].count += 1;
        }

        if (_limitCount == _userInfoes[msg.sender].count) {
            _successAmount += 1;
        }

        emit PunchIn(msg.sender, _userInfoes[msg.sender].count);
    }

    function claim() external {
        require(_endTimestamp < block.timestamp, "The activity is ongoing");
        UserInfo storage userInfo_ = _userInfoes[msg.sender];
        require(userInfo_.count >= _limitCount, "The amount of user punch is less than limit amount");
        require(!userInfo_.isClaimed, "Already claimed");

        userInfo_.isClaimed = true;
        uint256 rewardAmount = _totalRewardAmount.div(_successAmount);
        IERC20(_rewardToken).transferFrom(_treasury, msg.sender, rewardAmount);
        
        emit Claim(msg.sender, rewardAmount, _rewardToken);
    }

    function userInfo(address user) external view returns (uint256, bool) {
        return ( _userInfoes[user].count,  _userInfoes[user].isClaimed);
    }

    function verify(
        address user,
        uint256 count,
        bytes memory signature
    ) public view returns (bool) {
        bytes32 message = keccak256(abi.encodePacked(user, count, address(this)));
        bytes32 hash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", message));
        address[] memory signList = Signature.recoverAddresses(hash, signature);
        return signList[0] == _signer;
    }
}